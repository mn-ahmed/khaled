<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="purchase_order_sales_supplier_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.purchase.supplier.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="replace">
                <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference" domain="[('contact_type','!=','customer')]"/>
            </field>
        </field>
    </record>
</odoo>


      

